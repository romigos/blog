<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Мій другий сайт на рельсах</a>
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item active">
          <a class="nav-link" href="<%= posts_path %>#">Статьи</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Контакти</a>
        </li>
      </ul>
      <%=  link_to 'Новая статьи', new_post_path, class: 'btn btn-outline-primary pull-xs-right' %>
    </nav>
  </div>
  <div class='container main'>
    <%= yield %>
  </div>
  </body>
</html>
